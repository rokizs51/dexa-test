{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "generateOptions": {
    "spec": true,
    "flat": false,
    "specFileSuffix": "spec"
  },
  "monorepo": true,
  "root": "apps",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src"
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "attendance-service": {
      "type": "application",
      "root": "apps/attendance-service",
      "entryFile": "main",
      "sourceRoot": "apps/attendance-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/attendance-service/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "employee-service": {
      "type": "application",
      "root": "apps/employee-service",
      "entryFile": "main",
      "sourceRoot": "apps/employee-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/employee-service/tsconfig.app.json"
      }
    },
    "file-service": {
      "type": "application",
      "root": "apps/file-service",
      "entryFile": "main",
      "sourceRoot": "apps/file-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/file-service/tsconfig.app.json"
      }
    }
  }
}